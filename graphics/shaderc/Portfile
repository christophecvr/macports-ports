set py_ver          3.12
set py_ver_nodot    [string map {. {}} ${py_ver}]

compiler.cxx_standard 2017

# Need to use MacPorts libc++ on macOS 10.14 Mojave and older, because
# Apple Clang only added support for the C++17 <filesystem> library
# starting in Xcode 11 (clang-1100) for macOS 10.15+.
# 
# References:
# * https://stackoverflow.com/a/55353263
# * https://developer.apple.com/documentation/xcode-release-notes/xcode-11-release-notes
legacysupport.newest_darwin_requires_legacy 18
legacysupport.use_mp_libcxx yes


patchfiles              skip-third-party-install.patch

depends_build           port:spirv-headers

depends_lib             port:glslang \
                        port:spirv-tools


depends_build-append    port:python${py_ver_nodot}
configure.python        ${prefix}/bin/python${py_ver}
configure.args-append   -DPYTHON_EXECUTABLE:FILEPATH=${configure.python}

# To build shaderc and glslc inside build of spirv-tools,spirv-headers and glslang is required.
# We do not install them since at run time we can use the already installed one.
# For this reason commits are set to the ones of vulkan-sdk tag 1.3.280.0
# See DEPS in port:spirv-tools version vulkan tag 1.3.280.0 to obtain commit versions.
# See glslang port commit version for vulkan tag 1.3.280.0
set submodules {
    abseil abseil-cpp 79ca5d7aad63973c83a4962a66ab07cd623131ea third_party/abseil_cpp
    google effcee 19b4aa87af25cb4ee779a071409732f34bfc305c third_party/effcee
    google googletest 5df0241ea4880e5a846775d3efc8b873f7b36c31 third_party/googletest
    google re2 ed9fc269e2fdb299afe59e912928d31ad3fdcf7d third_party/re2
    KhronosGroup SPIRV-Headers 8b246ff75c6615ba4532fe4fde20f1be090c3764 third_party/spirv-headers
    KhronosGroup SPIRV-Tools 04896c462d9f3f504c99a4698605b6524af813c1 third_party/spirv-tools
    KhronosGroup glslang ee2f5d09eaf8f4e8d0d598bd2172fce290d4ca60 third_party/glslang
}

foreach {sub_author sub_project sub_commit sub_dest} ${submodules} {
    master_sites-append https://github.com/${sub_author}/${sub_project}/archive/${sub_commit}.tar.gz?dummy=:${sub_project}
    distfiles-append    ${sub_project}-${sub_commit}.tar.gz:${sub_project}
}

# FIXME : main module not extracted in worksrcpath with multiple download sources.
# Move extracted main module to worksrcpath
# Move submodules to cmakes expected location in worksrcpath
post-extract {
    move ${workpath}/google-shaderc-5d7736d ${worksrcpath}
    foreach {sub_author sub_project sub_commit sub_dest} ${submodules} {
        move ${workpath}/${sub_project}-${sub_commit} ${worksrcpath}/${sub_dest}
    }
}

# this could be an alternatif to extract submodules but then:
# - Not possible to reasign the used commits required to use for vulkan integration
# - There is no checksum of downloaded submodule sources.
#post-extract {
#    system ${worksrcpath}/utils/git-sync-deps
#}


configure.args-append   -DSKIP_THIRD_PARTY_INSTALL=ON \
                        -DSHADERC_ENABLE_WERROR_COMPILE=OFF \
                        -DCMAKE_INSTALL_PREFIX=${prefix}
