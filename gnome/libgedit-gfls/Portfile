PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           compiler_blacklist_versions 1.0
PortGroup           meson 1.0

name                libgedit-gfls
version             0.1.0
revision            0
license             GPL-3.0
description         A module dedicated to file loading and saving Gtk3+
long_description    ${description}
categories          gnome
maintainers         {christophecvr @christophecvr}
platforms           darwin
homepage            https://gitlab.gnome.org/World/gedit/libgedit-gfls
master_sites        https://gitlab.gnome.org/World/gedit/${name}/-/archive/${version}/
distname            ${name}-${version}

checksums           rmd160  66d84aff06601b2362117bc26477033bafc2e5fb \
                    sha256  9c658dd507c0daf12b34e735f1e6558561ed18f549c727976116add1272ef5e6 \
                    size    20915

#patchfiles          meson-headerinstall-dir.patch

depends_build-append \
                    path:lib/pkgconfig/gobject-introspection-1.0.pc:gobject-introspection \
                    port:meson \
                    port:ninja \
                    port:pkgconfig

depends_lib-append \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    path:lib/pkgconfig/glib-2.0.pc:glib2

# gobject-introspection uses g-ir-scanner, which uses $CC from env
if {${universal_possible} && [variant_isset universal]} {
    foreach arch ${configure.universal_archs} {
        lappend merger_build_env(${arch})  "CC=${configure.cc} -arch ${arch}"
        lappend merger_destroot_env(${arch})  "CC=${configure.cc} -arch ${arch}"
    }
} else {
    build.env-append       "CC=${configure.cc} ${configure.cc_archflags}"
    destroot.env-append    "CC=${configure.cc} ${configure.cc_archflags}"
}

livecheck.type      gnome

