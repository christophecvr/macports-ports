# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4


PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           compiler_blacklist_versions 1.0
PortGroup           meson 1.0

name                libgedit-tepl
set my_name         tepl
version             6.9.0
set branch          [join [lrange [split ${version} .] 0 1] .]
revision            0
license             LGPL-3.0
description         Tepl eases the development of GtkSourceView-based text editors,IDEs Gtk3+
long_description    Tepl was previously named Gtef (GTK text editor framework). The project has \
                    been renamed in June 2017 to have a more beautiful name. The end of Tepl is \
                    pronounced like in “apple”. Tepl currently targets **GTK 3**.
categories          gnome
maintainers         {christophecvr @christophecvr}
platforms           darwin
homepage            https://gitlab.gnome.org/swilmet/tepl
master_sites        gnome:sources/${my_name}/${branch}/
distname            ${my_name}-${version}
use_xz              yes

checksums           rmd160  c3e5acaa274c29f7ba5c1eeb5ea4459081756745 \
                    sha256  67e761564acd1905e719a7fb4c836f5943cd76212d312c57fb9cea09059f02b8 \
                    size    168020

#patchfiles          meson-package-naming.patch

depends_build-append \
                    path:lib/pkgconfig/gobject-introspection-1.0.pc:gobject-introspection \
                    port:meson \
                    port:ninja \
                    port:pkgconfig \
                    port:gettext

depends_lib-append \
                    port:cairo-devel \
                    port:glib2-exp \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    port:icu \
                    port:libgedit-amtk \
                    port:libhandy \
                    port:gettext \
                    port:pango-devel \
                    port:libgedit-gtksourceview \
                    port:libgedit-gfls

# ld: unknown option: -export-symbols
compiler.blacklist-append \
                    *gcc-4.0 *gcc-4.2

configure.args      -Dgtk_doc=true

# gobject-introspection uses g-ir-scanner, which uses $CC from env
if {${universal_possible} && [variant_isset universal]} {
    foreach arch ${configure.universal_archs} {
        lappend merger_build_env(${arch})  "CC=${configure.cc} -arch ${arch}"
        lappend merger_destroot_env(${arch})  "CC=${configure.cc} -arch ${arch}"
    }
} else {
    build.env-append       "CC=${configure.cc} ${configure.cc_archflags}"
    destroot.env-append    "CC=${configure.cc} ${configure.cc_archflags}"
}

livecheck.type      gnome
                    




