# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           meson 1.0

name                devhelp
version             43.0
revision            1
license             GPL-2+
description         Devhelp is an API documentation browser for GTK+ and GNOME.
long_description    Devhelp is an API documentation browser for GTK+ and GNOME. It works \
                    natively with gtk-doc (the API reference framework developed for GTK+ \
                    and used throughout GNOME for API documentation). If you use gtk-doc \
                    with your project, you can use Devhelp to browse the documentation.

maintainers         {devans @dbevans} openmaintainer
categories          gnome
homepage            https://wiki.gnome.org/Apps/Devhelp
set branch          [join [lrange [split ${version} .] 0 0 ] .]

master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  a8632bba01fda5c1028620b5239dd82c1e219904 \
                    sha256  63ceeefd05392e02044881ef1ecd724293553da5735b7efc082b2d13fe85dd04 \
                    size    327508

depends_build       path:bin/pkg-config:pkgconfig \
                    port:gettext \
                    port:gtk-doc \
                    port:itstool

depends_lib         port:desktop-file-utils \
                    port:libgedit-amtk \
                    port:gettext-runtime \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    path:lib/pkgconfig/gobject-introspection-1.0.pc:gobject-introspection \
                    port:gsettings-desktop-schemas \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    path:lib/pkgconfig/webkit2gtk-4.0.pc:webkit2-gtk

depends_run         port:adwaita-icon-theme

patchfiles          dont-use-version-script.patch

configure.args      -Dgtk_doc=true

# gobject-introspection uses g-ir-scanner, which uses $CC from env
if {${universal_possible} && [variant_isset universal]} {
    foreach arch ${configure.universal_archs} {
        lappend merger_build_env(${arch})  "CC=${configure.cc} -arch ${arch}"
        lappend merger_destroot_env(${arch})  "CC=${configure.cc} -arch ${arch}"
    }
} else {
    build.env-append       "CC=${configure.cc} ${configure.cc_archflags}"
    destroot.env-append    "CC=${configure.cc} ${configure.cc_archflags}"
}

post-activate {
    # this last add will create and or update icons theme caches.
    # gtk-update-icon-cache-3.0 is a part of gtk3 package.
    system "/usr/bin/find ${prefix}/share/icons -type d -depth 1 -execdir ${prefix}/bin/gtk-update-icon-cache-3.0 -f -t {} '\;'"
    system "${prefix}/bin/update-desktop-database ${prefix}/share/applications"
    system "${prefix}/bin/glib-compile-schemas ${prefix}/share/glib-2.0/schemas"
}

livecheck.type      gnome
