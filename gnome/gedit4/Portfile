PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           compiler_blacklist_versions 1.0
PortGroup           app   1.0
PortGroup           meson 1.0
PortGroup           yelp  1.0

name                gedit4
#conflicts           gedit
version             48.0
revision            0
license             GPL-2+
set branch          [join [lrange [split ${version} .] 0 0 ] .]
set my_name         gedit
description         GNOME Text editor.
long_description    gedit is an easy-to-use and general-purpose text editor. Its development started \
                    in 1998, at the beginnings of the GNOME project .
categories          gnome x11 quartz editors
maintainers         {christophecvr @christophecvr}
platforms           darwin
homepage            https://gedit-technology.github.io/apps/gedit/
master_sites        gnome:sources/${my_name}/${branch}/
distname            ${my_name}-${version}

use_xz              yes

#redefinition of typedef error
compiler.c_standard 2011

#configure.compiler macports-clang-18

checksums           rmd160  02231a01f8ea6840848f7553f1e9acf9cdf62950 \
                    sha256  fe0fef9b7b0799120db86ae893a060036a13445352ded9169bab28d38acf0e80 \
                    size    2889116

patchfiles          gedit-app-osx-m.patch

depends_build-append \
                    port:desktop-file-utils \
                    port:docbook-xsl-nons \
                    port:gettext \
                    port:gtk-doc \
                    port:itstool \
                    port:meson \
                    port:ninja \
                    port:pkgconfig \
                    port:appstream-glib \
                    bin:git:git

depends_lib-append \
                    port:adwaita-icon-theme \
                    port:cairo \
                    port:libsvg \
                    port:libsvg-cairo \
                    port:iso-codes \
                    port:gettext \
                    port:gdk-pixbuf2 \
