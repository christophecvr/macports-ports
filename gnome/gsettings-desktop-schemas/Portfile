# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           meson 1.0

name                gsettings-desktop-schemas
version             47.1
license             LGPL-2.1
set branch          [join [lrange [split ${version} .] 0 0] .]

description         gsettings-desktop-schemas contains a collection of GSettings schemas \
                    for settings shared by various components of a desktop.

long_description    {*}${description}

maintainers         {devans @dbevans} openmaintainer
categories          gnome
platforms           any
homepage            https://www.gnome.org
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  6d07cf5f86aa6e56c346fe74e1c2712dc06a8d8e \
                    sha256  a60204d9c9c0a1b264d6d0d134a38340ba5fc6076a34b84da945d8bfcc7a2815 \
                    size    806272

supported_archs     noarch

depends_build-append \
                    port:pkgconfig \
                    port:python312

depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2-exp \
                    path:lib/pkgconfig/gobject-introspection-1.0.pc:gobject-introspection

# gobject-introspection uses g-ir-scanner, which uses $CC from env
if {${universal_possible} && [variant_isset universal]} {
    foreach arch ${configure.universal_archs} {
        lappend merger_build_env(${arch})  "CC=${configure.cc} -arch ${arch}"
        lappend merger_destroot_env(${arch})  "CC=${configure.cc} -arch ${arch}"
    }
} else {
    build.env-append       "CC=${configure.cc} ${configure.cc_archflags}"
    destroot.env-append    "CC=${configure.cc} ${configure.cc_archflags}"
}

post-activate {
    system "${prefix}/bin/glib-compile-schemas ${prefix}/share/glib-2.0/schemas"
}

livecheck.type      gnome
